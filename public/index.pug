doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Summarizer
        link(rel="stylesheet", href="css/all.min.css")
        link(rel="stylesheet", href="css/main.css")
    body.flex.flex-center.align-content-center.flex-wrap

        //- Loading Box
        .loading 
            span 

        //- Start Settings box
        .settings
                .icon
                    i.fas.fa-cog
                .setting-container
                    .option-box 
                        h4 Colors
                        ul.page-colors.flex.align-items-center.flex-wrap
                            li(data-color="#1c2130").active
                            li(data-color="#292522")
                            li(data-color="#2b2b2b")
                            li(data-color="#353634")
                            li(data-color="#4d6160")
                            li(data-color="#607D8B")

                            li(data-color="#002c2b")
                            li(data-color="#204b5e")
                            li(data-color="#364461")
                            li(data-color="#1f6764")
                            li(data-color="#0a837f")
                            li(data-color="#009688")

        
        -// Main Box
        .box 
            .container 
                .header-content.flex.flex-center.flex-wrap.text-center
                    h1.header Text Summarizer
                    p To enter text to be summarized, please press “Enter Text” below and write your text to summarize.
                    p To upload a document to be summarized, please press “Upload File”. Please make sure to upload either .txt or .pdf.
                    p You can determine the number of sentences that you wish your summary to be limited to.

                .form-box.flex.flex-center.flex-wrap
                    form(action="")
                        .buttons.flex.flex-center.flex-wrap
                            label.text-input(for="text") Enter Text
                            label.file-label(for="file") Upload File
                            select(name="summarizeSize")
                                option(disabled selected) Sentences Count 

                        .file-container 
                            input(type="file" id="file" accept=".txt, .pdf")

                        .input-container 
                            textarea(name="text" id= "text" placeholder="Type Your Text")
                            span Sentences Count (0)
                        
                        .error-handler 
                            p

                        .file-details
                            .cancel-button
                                button Cancel
                                
                            p.file-name
                            p.file-size

                        .submit-container.text-center
                            input(type="submit", value="submit")
        
        //- The Output Box
        .output 
            .container
                .box
                    .content
                        p
                        button See More

                    .copy-download.flex.flex-between.flex-wrap
                        .copy
                            p.flex.align-items-center Copy
                        a(href="").flex
                            .download
                                p.flex.align-items-center Download As Text File
                    .close-button 
                        i(class="fa-regular fa-circle-xmark")
                        
        script(src="js/all.min.js")
        script(src="js/globalFunction.js") 
        script(src="js/main.js")